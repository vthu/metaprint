{
  "manifest_version": 2,
  "name": "Mantis",
  "description": "Metaprint measures your carbon footprint",
  "version": "1.0",
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "index.html"
  },
  "content_scripts": [
    {
      "matches": ["https://www.amazon.com//*"],
      "js": ["Amazon.js"]
    }
  ],
  "permissions": [
    "tabs",
    "storage",
    "activeTab"
  ]
}